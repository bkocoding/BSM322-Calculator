<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSM322_Calculator.Pages.ScientificPage"
             Title="Scientific">

    <Grid RowSpacing="8" ColumnSpacing="8" Padding="10">

        <Grid.RowDefinitions>
            <!--OPERATION ENTRY-->
            <RowDefinition Height="*" />
            <!--RESULT ENTRY-->
            <RowDefinition Height="2*" />
            <!--MEMORY & FUNCTION BUTTONS-->
            <RowDefinition Height="Auto" />
            <!--BUTTONS-->
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--ENTRIES-->
        <Entry x:Name="OperationEntry"
               Grid.Row="0"
               HorizontalTextAlignment="End"
               IsReadOnly="True"
               FontSize="18"/>

        <Entry x:Name="ResultEntry"
               Grid.Row="1"
               Text="0"
               HorizontalTextAlignment="End"
               IsReadOnly="True"
               FontSize="50" TextChanged="ResultEntryTextChanged"/>

        <!--MEMORY & FUNCTION CHANGE BUTTONS-->
        <VerticalStackLayout Grid.Row="2" Spacing="8">
            <!-- FUNCTION CHANGE BUTTONS -->
            <Grid RowSpacing="4"  ColumnSpacing="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Text="DEG" Clicked="DegClickEvent"/>
                <Button Grid.Column="1" Text="F-E" Clicked="FEClickEvent"/>
            </Grid>

            <!--MEMORY BUTTONS-->
            <Grid RowSpacing="4" ColumnSpacing="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Text="MC" Clicked="MemoryClickEvent" HeightRequest="36"/>
                <Button Grid.Column="1" Text="MR" Clicked="MemoryClickEvent" HeightRequest="36"/>
                <Button Grid.Column="2" Text="M+" Clicked="MemoryClickEvent" HeightRequest="36"/>
                <Button Grid.Column="3" Text="M-" Clicked="MemoryClickEvent" HeightRequest="36"/>
                <Button Grid.Column="4" Text="MS" Clicked="MemoryClickEvent" HeightRequest="36"/>
                <Button Grid.Column="5" Text="M↓" Clicked="MemoryClickEvent" HeightRequest="36"/>
            </Grid>

            <!--TRIGONOMETRY AND FUNCTION PICKERS-->
            <HorizontalStackLayout Spacing="8">
                <Picker x:Name="TrigPicker" Title="◺ Trigonometry" WidthRequest="120" SelectedIndexChanged="TrigPicker_SelectedIndexChanged">
                    <Picker.Items>
                        <x:String>sin</x:String>
                        <x:String>cos</x:String>
                        <x:String>tan</x:String>
                        <x:String>cot</x:String>
                        <x:String>csc</x:String>
                        <x:String>sec</x:String>

                        <x:String>sin^-1</x:String>
                        <x:String>cos^-1</x:String>
                        <x:String>tan^-1</x:String>
                        <x:String>cot^-1</x:String>
                        <x:String>csc^-1</x:String>
                        <x:String>sec^-1</x:String>

                        <x:String>sinh</x:String>
                        <x:String>cosh</x:String>
                        <x:String>tanh</x:String>
                        <x:String>coth</x:String>
                        <x:String>csch</x:String>
                        <x:String>sech</x:String>

                        <x:String>sinh^-1</x:String>
                        <x:String>cosh^-1</x:String>
                        <x:String>tanh^-1</x:String>
                        <x:String>coth^-1</x:String>
                        <x:String>csch^-1</x:String>
                        <x:String>sech^-1</x:String>
                    </Picker.Items>
                </Picker>

                <Picker x:Name="FuncPicker" Title="⨍ Function" WidthRequest="120" SelectedIndexChanged="FuncPicker_SelectedIndexChanged">
                    <Picker.Items>
                        <x:String>|x|</x:String>
                        <x:String>⌊x⌋</x:String>
                        <x:String>⌈x⌉</x:String>
                        <x:String>rand</x:String>
                        <x:String>→dms</x:String>
                        <x:String>→deg</x:String>
                    </Picker.Items>
                </Picker>
            </HorizontalStackLayout>

        </VerticalStackLayout>

        <!--BUTTONS-->
        <Grid x:Name="MainMatrixGrid" Grid.Row="3"
              RowSpacing="6" ColumnSpacing="6">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Text="2nd" Clicked="SecondButtonClickEvent"/>
            <Button Grid.Row="0" Grid.Column="1" Text="π" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="0" Grid.Column="2" Text="e" Clicked="OperatorClickEvent"/>
            <Button x:Name="ClearButton" Grid.Row="0" Grid.Column="3" Text="C" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="0" Grid.Column="4" Text="⌫" Clicked="OperatorClickEvent"/>

            <Button Grid.Row="1" Grid.Column="0" Text="x²" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="1" Grid.Column="1" Text="1/x" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="1" Grid.Column="2" Text="|x|" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="1" Grid.Column="3" Text="exp" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="1" Grid.Column="4" Text="mod" Clicked="OperatorClickEvent"/>

            <Button Grid.Row="2" Grid.Column="0" Text="√" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="2" Grid.Column="1" Text="(" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="2" Grid.Column="2" Text=")" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="2" Grid.Column="3" Text="n!" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="2" Grid.Column="4" Text="÷" Clicked="OperatorClickEvent"/>

            <Button Grid.Row="3" Grid.Column="0" Text="xʸ" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="3" Grid.Column="1" Text="7" Clicked="NumberClickEvent"/>
            <Button Grid.Row="3" Grid.Column="2" Text="8" Clicked="NumberClickEvent"/>
            <Button Grid.Row="3" Grid.Column="3" Text="9" Clicked="NumberClickEvent"/>
            <Button Grid.Row="3" Grid.Column="4" Text="×" Clicked="OperatorClickEvent"/>

            <Button Grid.Row="4" Grid.Column="0" Text="10^x" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="4" Grid.Column="1" Text="4" Clicked="NumberClickEvent"/>
            <Button Grid.Row="4" Grid.Column="2" Text="5" Clicked="NumberClickEvent"/>
            <Button Grid.Row="4" Grid.Column="3" Text="6" Clicked="NumberClickEvent"/>
            <Button Grid.Row="4" Grid.Column="4" Text="−" Clicked="OperatorClickEvent"/>

            <Button Grid.Row="5" Grid.Column="0" Text="log" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="5" Grid.Column="1" Text="1" Clicked="NumberClickEvent"/>
            <Button Grid.Row="5" Grid.Column="2" Text="2" Clicked="NumberClickEvent"/>
            <Button Grid.Row="5" Grid.Column="3" Text="3" Clicked="NumberClickEvent"/>
            <Button Grid.Row="5" Grid.Column="4" Text="+" Clicked="OperatorClickEvent"/>

            <Button Grid.Row="6" Grid.Column="0" Text="ln" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="6" Grid.Column="1" Text="±" Clicked="OperatorClickEvent"/>
            <Button Grid.Row="6" Grid.Column="2" Text="0" Clicked="NumberClickEvent"/>
            <Button Grid.Row="6" Grid.Column="3" Text="," Clicked="NumberClickEvent"/>
            <Button Grid.Row="6" Grid.Column="4" Text="=" Clicked="OperatorClickEvent"/>
        </Grid>
    </Grid>
</ContentPage>
